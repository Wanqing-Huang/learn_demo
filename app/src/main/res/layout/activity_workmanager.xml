<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_one_time_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start One Time Work" />

    <Button
        android:id="@+id/btn_stop_one_time_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop One Time Work" />

    <Button
        android:id="@+id/btn_start_period_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Period Work" />

    <Button
        android:id="@+id/btn_stop_period_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Period Work" />


</LinearLayout>