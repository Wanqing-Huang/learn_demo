<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".coroutine.CoroutineTestActivity">

    <Button
        android:id="@+id/btn_create_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create coroutine" />

    <Button
        android:id="@+id/btn_close_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="close coroutine" />

    <Button
        android:id="@+id/btn_start_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start scope" />

    <Button
        android:id="@+id/btn_cancel_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel scope" />

    <Button
        android:id="@+id/btn_print_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print_job" />


</LinearLayout>