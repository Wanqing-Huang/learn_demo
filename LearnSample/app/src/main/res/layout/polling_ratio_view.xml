<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/feeds_polling_width"
    android:layout_height="@dimen/feeds_polling_height">

    <ProgressBar
        android:id="@+id/progress_view"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progressDrawable="@drawable/progress_horizontal_green" />


    <RelativeLayout
        android:id="@+id/left_answer"
        android:layout_width="126dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/left_answer_txt"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="126dp"
            android:maxLines="2"
            android:paddingLeft="@dimen/feeds_polling_answer_horizontal_padding"
            android:paddingRight="@dimen/feeds_polling_answer_horizontal_padding"
            android:text="YES"
            android:textColor="@color/feeds_polling_sticker_green"
            android:textSize="@dimen/feeds_polling_answer_big_text_size"
            android:transformPivotX="63dp"
            android:transformPivotY="0dp" />

        <LinearLayout
            android:id="@+id/left_answer_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/left_ratio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="80"
                android:textSize="@dimen/feeds_polling_ratio_text_size" />

            <TextView
                android:id="@+id/left_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/polling_view_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#17000000" />

    <RelativeLayout
        android:id="@+id/right_answer"
        android:layout_width="126dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/right_answer_txt"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="120dp"
            android:maxLines="2"
            android:paddingLeft="@dimen/feeds_polling_answer_horizontal_padding"
            android:paddingRight="@dimen/feeds_polling_answer_horizontal_padding"
            android:text="NO"
            android:textColor="@color/feeds_polling_sticker_oringe"
            android:textSize="@dimen/feeds_polling_answer_big_text_size"
            android:transformPivotX="63dp"
            android:transformPivotY="0dp" />


        <LinearLayout
            android:id="@+id/right_answer_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/right_ratio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="80"
                android:textSize="@dimen/feeds_polling_ratio_text_size" />

            <TextView
                android:id="@+id/right_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
